<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox spacing="8.0" stylesheets="@../../styles.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.github.engatec.vdl.controller.preferences.GeneralPreferencesController">
   <children>
      <VBox spacing="8.0">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="8.0">
               <children>
                  <RadioButton fx:id="downloadPathRadioBtn" mnemonicParsing="false" text="%preferences.label.download.path" wrapText="true" />
                  <TextField fx:id="downloadPathTextField" editable="false" minWidth="150.0" HBox.hgrow="ALWAYS" />
                  <Button fx:id="chooseDownloadPathBtn" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" styleClass="control-btn" text="%preferences.btn.download.choose" />
               </children>
            </HBox>
            <RadioButton fx:id="askPathRadioBtn" mnemonicParsing="false" text="%preferences.label.download.askpath" />
         </children>
         <VBox.margin>
            <Insets bottom="8.0" />
         </VBox.margin>
      </VBox>
      <CheckBox fx:id="autoSearchFromClipboardCheckBox" mnemonicParsing="false" text="%preferences.general.autosearchfromclipboard.label" wrapText="true">
         <VBox.margin>
            <Insets bottom="8.0" top="8.0" />
         </VBox.margin>
      </CheckBox>
      <VBox spacing="8.0">
         <children>
            <CheckBox fx:id="autodownloadCheckBox" mnemonicParsing="false" text="%preferences.general.autodownload.label" />
            <VBox fx:id="autodownloadSettingsWrapperVBox" spacing="8.0">
               <children>
                  <RadioButton fx:id="autodownloadBestQualityRadioBtn" mnemonicParsing="false" text="%preferences.general.autodownload.bestquality" />
                  <HBox alignment="CENTER_LEFT" spacing="8.0">
                     <children>
                        <RadioButton fx:id="autodownloadCustomFormatRadioBtn" mnemonicParsing="false" text="%preferences.general.autodownload.customformat" />
                        <TextField fx:id="autodownloadCustomFormatTextField" HBox.hgrow="ALWAYS" />
                     </children>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </HBox>
               </children>
               <VBox.margin>
                  <Insets left="16.0" top="4.0" />
               </VBox.margin>
            </VBox>
         </children>
         <VBox.margin>
            <Insets bottom="8.0" top="8.0" />
         </VBox.margin>
      </VBox>
   </children>
   <padding>
      <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
   </padding>
</VBox>
