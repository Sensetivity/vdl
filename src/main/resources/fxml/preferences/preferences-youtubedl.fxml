<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox spacing="8.0" stylesheets="@../../styles.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.github.engatec.vdl.controller.preferences.YoutubedlPreferencesController">
   <children>
      <CheckBox fx:id="noMTimeCheckBox" mnemonicParsing="false" text="%preferences.youtubedl.nomtime.label" wrapText="true">
         <VBox.margin>
            <Insets bottom="8.0" />
         </VBox.margin>
      </CheckBox>
      <CheckBox fx:id="useConfigFileCheckBox" mnemonicParsing="false" text="%preferences.youtubedl.checkbox.configitem" wrapText="true" />
      <HBox alignment="CENTER_LEFT" spacing="8.0">
         <children>
            <TextField fx:id="configFileTextField" editable="false" minWidth="150.0" HBox.hgrow="ALWAYS" />
            <Button fx:id="configFileChooseBtn" mnemonicParsing="false" styleClass="control-btn" text="%preferences.youtubedl.btn.choose" />
         </children>
         <VBox.margin>
            <Insets left="8.0" />
         </VBox.margin>
      </HBox>
   </children>
   <padding>
      <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
   </padding>
</VBox>
