<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.github.engatec.vdl.controller.MainController">
  <children>
    <MenuBar VBox.vgrow="NEVER">
      <menus>
        <Menu fx:id="fileMenu" mnemonicParsing="false" text="%menu.file">
          <items>
                  <MenuItem fx:id="checkUpdatesMenuItem" mnemonicParsing="false" text="%menu.file.checkupdates" />
            <MenuItem fx:id="preferencesMenuItem" mnemonicParsing="false" text="%menu.file.preferences" />
            <SeparatorMenuItem mnemonicParsing="false" />
            <MenuItem fx:id="exitMenuItem" mnemonicParsing="false" text="%menu.file.exit" />
          </items>
        </Menu>
        <Menu fx:id="languageMenu" mnemonicParsing="false" text="%menu.language">
          <items>
            <MenuItem fx:id="langEnMenuItem" mnemonicParsing="false" text="%menu.language.en" />
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem fx:id="langRuMenuItem" mnemonicParsing="false" text="%menu.language.ru" />
          </items>
        </Menu>
      </menus>
    </MenuBar>
      <VBox prefHeight="331.0" prefWidth="610.0" spacing="8.0" VBox.vgrow="ALWAYS">
         <children>
            <HBox spacing="8.0">
               <children>
                  <TextField fx:id="videoUrlTextField" HBox.hgrow="ALWAYS" />
                  <Button fx:id="searchBtn" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" text="%search">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Button>
                  <ProgressIndicator fx:id="searchProgressIndicator" minHeight="-Infinity" minWidth="-Infinity" prefHeight="22.0" prefWidth="22.0" />
               </children>
            </HBox>
            <TabPane fx:id="videoAudioTabPane" VBox.vgrow="ALWAYS">
               <tabs>
                  <Tab fx:id="videoTab" closable="false" text="%video">
                     <content>
                        <ScrollPane fx:id="videoTabScrollPane" fitToHeight="true" fitToWidth="true">
                           <padding>
                              <Insets bottom="8.0" top="8.0" />
                           </padding>
                        </ScrollPane>
                     </content>
                  </Tab>
                  <Tab fx:id="audioTab" closable="false" text="%audio">
                     <content>
                        <ScrollPane fx:id="audioTabScrollPane" fitToHeight="true" fitToWidth="true">
                           <padding>
                              <Insets bottom="8.0" top="8.0" />
                           </padding>
                        </ScrollPane>
                     </content>
                  </Tab>
               </tabs>
            </TabPane>
         </children>
         <padding>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
         </padding>
      </VBox>
  </children>
</VBox>
