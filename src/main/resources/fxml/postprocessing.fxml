<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<VBox spacing="8.0" stylesheets="@../styles.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.github.engatec.vdl.controller.preferences.PostprocessingController">
   <padding>
      <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
   </padding>
   <children>
      <CheckBox fx:id="fragmentCheckbox" mnemonicParsing="false" text="%stage.postprocessing.fragment.checkbox" />
      <HBox fx:id="fragmentTimeRangeWrapper" alignment="CENTER_LEFT" spacing="8.0">
         <children>
            <Label text="%stage.postprocessing.fragment.label.from" />
            <TextField fx:id="fragmentFromTextField" prefWidth="90.0" />
            <Label text="%stage.postprocessing.fragment.label.to">
               <HBox.margin>
                  <Insets left="8.0" />
               </HBox.margin>
            </Label>
            <TextField fx:id="fragmentToTextField" prefWidth="90.0" />
         </children>
         <VBox.margin>
            <Insets left="8.0" />
         </VBox.margin>
      </HBox>
      <Pane VBox.vgrow="ALWAYS">
         <VBox.margin>
            <Insets bottom="16.0" top="16.0" />
         </VBox.margin>
      </Pane>
      <HBox alignment="CENTER_RIGHT" spacing="8.0">
         <children>
            <Button fx:id="okButton" mnemonicParsing="false" styleClass="control-btn" text="%button.ok" />
            <Button fx:id="cancelButton" mnemonicParsing="false" styleClass="control-btn" text="%button.cancel" />
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </HBox>
   </children>
</VBox>
